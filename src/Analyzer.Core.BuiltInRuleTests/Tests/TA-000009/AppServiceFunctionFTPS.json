{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "function-app-positive",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {
        "siteConfig": {
          "ftpsState": "FtpsOnly"
        }
      },
      "metadata": {
        "description": "Function App with FTPS only enabled (positive case)"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "function-app-positive-disabled",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {
        "siteConfig": {
          "ftpsState": "Disabled"
        }
      },
      "metadata": {
        "description": "Function App with FTPS disabled (positive case)"
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', 'function-app-positive', 'web')]",
      "properties": {
        "ftpsState": "FtpsOnly"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', 'function-app-positive')]"
      ],
      "metadata": {
        "description": "Function App with FTPS only enforced in site config (positive case)"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "function-app-negative",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {
        "siteConfig": {
          "ftpsState": "AllAllowed"
        }
      },
      "metadata": {
        "description": "Function App without FTPS enforcement (negative case)"
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', 'function-app-negative', 'web')]",
      "properties": {
        "ftpsState": "AllAllowed"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', 'function-app-negative')]"
      ],
      "metadata": {
        "description": "Function App without FTPS enforcement in site config (negative case)"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "function-app-no-ftps-state",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {
        "siteConfig": {}
      },
      "metadata": {
        "description": "Function App without FTPS state set (negative case)"
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', 'function-app-no-ftps-state', 'web')]",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', 'function-app-no-ftps-state')]"
      ],
      "metadata": {
        "description": "Function App without FTPS state set in site config (negative case)"
      }
    }
  ]
}