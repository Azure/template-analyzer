{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "api-app-positive",
      "location": "[parameters('location')]",
      "kind": "api",
      "properties": {
        "siteConfig": {
          "remoteDebuggingEnabled": false
        }
      },
      "metadata": {
        "description": "API App with remote debugging disabled (positive case)"
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', 'api-app-positive', 'web')]",
      "properties": {
        "remoteDebuggingEnabled": false
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', 'api-app-positive')]"
      ],
      "metadata": {
        "description": "API App with remote debugging disabled in site config (positive case)"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "api-app-negative",
      "location": "[parameters('location')]",
      "kind": "api",
      "properties": {
        "siteConfig": {
          "remoteDebuggingEnabled": true
        }
      },
      "metadata": {
        "description": "API App with remote debugging enabled (negative case)"
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', 'api-app-negative', 'web')]",
      "properties": {
        "remoteDebuggingEnabled": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', 'api-app-negative')]"
      ],
      "metadata": {
        "description": "API App with remote debugging enabled in site config (negative case)"
      }
    }
  ]
}