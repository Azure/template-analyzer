{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/TemplateAnalyzer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/src/TemplateAnalyzer.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/src/TemplateAnalyzer.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Analyzer.Cli/Analyzer.Cli.csproj",
                "--runtime",
                "${input:runtimeId}",
                "--self-contained",
                "/property:PublishSingleFile=true",
                "/property:IncludeNativeLibrariesForSelfExtract=true",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "runtimeId",
            "type": "pickString",
            "description": "The platform to publish for",
            "options": [
                "win-x64",
                "linux-x64",
                "osx-x64",
                "win-arm64",
                "linux-arm64",
                "osx-arm64"
            ]
        }
    ]
}